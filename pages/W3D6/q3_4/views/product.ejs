<%- include('fragments/header.ejs') %>
<%- include('fragments/menu.ejs') %>
<div id="container">
    <div class="product-item">
        <div class="item-header">
            <h1><%= product.title %></h1>
            <p><%= product.price %></p>
        </div>
        <div class="item-body">
            <p>
                <%= product.description %>
            </p>
        </div>
        <form action="/addToCart" method="post">
            <input type="hidden" name="id" value=<%= product.id %>>
            <input id="add-cart" type="submit" value="Add To Cart">
        </form>
    </div>
</div>
<%- include('fragments/footer.ejs') %>